<section class="section dashboard">
    <div class="row mb-4">
        <!-- Status Gateway Card -->
        <div class="col-md-4 mb-3">
            <div class="status-card status-unknown" id="gateway-status-card">
                <div class="card-icon">
                    <i class="bx bx-plug"></i>
                </div>
                <div class="card-value" id="gateway-status-text">Checking...</div>
                <div class="card-title">Status Gateway</div>
                <div class="card-badge status-badge-unknown" id="gateway-status-badge">
                    <i class="bx bx-spin"></i> Checking...
                </div>
            </div>
        </div>

        <!-- Pesan Terkirim Hari Ini Card -->
        <div class="col-md-4 mb-3">
            <div class="status-card status-messages">
                <div class="card-icon">
                    <i class="bx bx-paper-plane"></i>
                </div>
                <div class="card-value">5</div>
                <div class="card-title">Message sent today</div>
                <div class="card-badge status-badge-unknown">
                    <i class="bx bx-arrow-to-top"></i> 50%
                </div>
            </div>
        </div>

        <!-- Statistik Lainnya Card -->
        <div class="col-md-4 mb-3">
            <div class="status-card status-stable">
                <div class="card-icon">
                    <i class="bx bx-user-check"></i>
                </div>
                <div class="card-value">100%</div>
                <div class="card-title">Success rate</div>
                <div class="card-badge status-badge-connected">
                    <i class="bx bx-check"></i> Stable
                </div>
            </div>
        </div>
    </div>

    
    <!-- Quick Actions -->
    <div class="quick-actions mb-4">
        <a href="/message" class="action-btn" data-page="send-message">
            <i class="bx bx-paper-plane"></i>
            <div class="btn-title">Send Message</div>
            <div class="btn-desc">Test Send Message</div>
        </a>
        
        <a href="/history" class="action-btn" data-page="history">
            <i class="bx bx-history"></i>
            <div class="btn-title">History</div>
            <div class="btn-desc">Check History Send</div>
        </a>
        
        <a href="/login-whatsapp" class="action-btn" data-page="contacts">
            <i class="bx bx-qr-scan"></i>
            <div class="btn-title">Status Device</div>
            <div class="btn-desc">Check Status Device</div>
        </a>
        
        <a href="/settings" class="action-btn" data-page="auto-reply">
            <i class="bx bx-cog"></i>
            <div class="btn-title">Settings</div>
            <div class="btn-desc">Setting your WA Gateway</div>
        </a>
    </div>
    
    <!-- Last Message Card -->
    <div class="last-message-card">
        <div class="last-message-header">
            <div class="last-message-title">Last Message</div>
            <div class="last-message-time">17 Juli 2025, 19:00</div>
        </div>
        
        <div class="message-container">
            <div class="message-avatar">W</div>
            <div class="message-content">
                <div class="message-header">
                    <div class="message-sender">Waserva</div>
                    <div class="message-time">19:00</div>
                </div>
                <div class="message-text">
                    Last message
                </div>

                <div class="message-status status-delivered">
                    <i class="icon"></i> success
                </div>
            </div>
        </div>
        <div class="text-center">No messages have been sent yet.</div>
    </div>
</section>
